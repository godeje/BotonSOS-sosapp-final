<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <LinearLayout
        android:id="@+id/alertBanner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:background="@android:color/holo_red_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/alertTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚠️ ALERTA"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/openMapsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Abrir en mapa"
        android:textAllCaps="false"
        android:layout_margin="24dp"
        app:layout_constraintTop_toBottomOf="@id/alertBanner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/silenceButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Silenciar localmente"
        android:textAllCaps="false"
        android:layout_margin="24dp"
        app:layout_constraintTop_toBottomOf="@id/openMapsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
