<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    tools:context=".SettingsActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="center_horizontal">

    <TextView
        android:id="@+id/settingsTitle"
        android:text="Configuración"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/settingsMessage"
        android:text="Alias actual:"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textMembers"
        android:text="Miembros conectados: 1/2"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Palabras clave -->
    <TextView
        android:text="Frase clave:"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/keywordGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp" />

    <!-- Contacto de emergencia -->
    <EditText
        android:id="@+id/inputContact"
        android:hint="Correo de contacto de emergencia"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" />

    <!-- ✅ NUEVO: muestra contacto actual -->
    <TextView
        android:id="@+id/textEmergencyContact"
        android:text="Contacto de emergencia: —"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center_horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnSaveContact"
        android:text="Guardar contacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp" />

    <Button
        android:id="@+id/btnDeleteContact"
        android:text="Eliminar contacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <!-- Historial -->
    <Button
        android:id="@+id/btnViewHistory"
        android:text="Ver historial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp" />

    <Button
        android:id="@+id/btnClearHistory"
        android:text="Borrar historial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <!-- Acciones finales -->
    <Button
        android:id="@+id/btnBackHome"
        android:text="Volver al inicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp" />

    <Button
        android:id="@+id/btnLogout"
        android:text="Cerrar sesión"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp" />

    <Button
        android:id="@+id/btnDeleteAccount"
        android:text="Eliminar cuenta"
        android:textColor="@android:color/holo_red_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp" />
  </LinearLayout>
</ScrollView>
